@model List<NetFlix.CORE.ViewModels.GetMovieVm>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="main__title">
                    <h2>All Movies</h2>
                    <a asp-action="Create" asp-controller="Movie" class="main__title-link">Add New Movie</a>
                </div>
            </div>
        </div>

        <div class="row" style="color:white;">
            @foreach (var movie in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <div style="background-color: #222; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.3);">
                        <a asp-action="Detail" asp-controller="Movie" asp-route-id="@movie.Id">
                            <img src="@movie.PosterFileName" alt="@movie.Title"
                                 style="width: 100%; height: 300px; object-fit: cover;">
                        </a>
                        <div style="padding: 15px;">
                            <h5 style="color:white; font-size: 16px;">@movie.Title (@movie.Year)</h5>
                            <p style="color: #ccc; font-size: 14px;">
                                <strong>Category:</strong> @movie.Category <br />
                                <strong>IMDb:</strong> <i class="ti ti-star" style="color: gold;"></i> @movie.ImdbRating
                            </p>
                            <div style="display: flex; flex-wrap: wrap; gap: 5px;">
                                <a asp-action="Detail" asp-controller="Movie" asp-route-id="@movie.Id" class="btn btn-sm btn-primary">Details</a>
                                <a asp-action="Edit" asp-controller="Movie" asp-route-id="@movie.Id" class="btn btn-sm btn-secondary">Edit</a>
                                <a asp-action="Delete" asp-controller="Movie" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
