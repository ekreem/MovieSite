@model NetFlix.CORE.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register - HotFlix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- header -->
<header class="header">
    <div class="header__content">
        <a href="/Admin/Home" class="header__logo">
            <img src="~/Admin/img/logo.svg" alt="HotFlix Logo">
        </a>
        <button class="header__btn" type="button">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>

<div style="display:flex; justify-content:center;">


    <div class="container">


        <section class="section section--bg" data-bg="/img/bg/section__bg.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <h1 class="section__title">Register</h1>
                        <form asp-controller="Account" asp-action="Register" method="post" class="sign__form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div style="display:flex; justify-content:space-between; ">
                                <div class="sign__group mb-3">
                                    <label asp-for="Name" class="sign__label"></label><br />
                                    <input asp-for="Name" class="sign__input" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                                <div class="sign__group mb-3">
                                    <label asp-for="Surname" class="sign__label"></label><br />
                                    <input asp-for="Surname" class="sign__input" placeholder="Surname" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="sign__group mb-3">
                                <label asp-for="Username" class="sign__label"></label>
                                <input asp-for="Username" class="sign__input" placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="sign__group mb-3">
                                <label asp-for="Email" class="sign__label"></label>
                                <input asp-for="Email" class="sign__input" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="sign__group mb-3">
                                <label asp-for="Password" class="sign__label"></label>
                                <input asp-for="Password" class="sign__input" type="password" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="sign__group mb-3">
                                <label asp-for="ConfirmPassword" class="sign__label"></label>
                                <input asp-for="ConfirmPassword" class="sign__input" type="password" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="sign__group">
                                <button asp-controller="Account" asp-action="Register" type="submit" class="sign__btn btn btn--primary">Register</button>
                                <a asp-action="Login" class="btn btn--secondary">Back to Login</a>
                            </div>
                            @if (!string.IsNullOrEmpty(TempData["Error"] as string))
                            {
                                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </section>


    </div>

</div>

<!-- main content -->