@model NetFlix.CORE.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - HotFlix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- header -->
<header class="header">
    <div class="header__content">
        <a asp-controller="Home" asp-action="Index" class="header__logo">
            <img src="~/Admin/img/logo.svg" alt="HotFlix Logo">
        </a>
        <button class="header__btn" type="button">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>
<div style="display:flex; justify-content:center;">

    <div class="container">

        <section class="section section--bg" data-bg="/img/bg/section__bg.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <h1 class="section__title">Login</h1>
                        <form asp-action="Login" method="post" class="sign__form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="sign__group mb-3">
                                <label asp-for="Email" class="sign__label"></label>
                                <input asp-for="Email" class="sign__input" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="sign__group mb-3">
                                <label asp-for="Password" class="sign__label"></label>
                                <input asp-for="Password" class="sign__input" type="password" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="sign__group mb-3">
                            </div>
                            <div class="sign__group">
                                <button asp-action="Login" type="submit" class="sign__btn btn btn--primary">Login</button>
                                <a asp-action="Register" class="btn btn--secondary">Register</a>
                            </div>
                            @if (!string.IsNullOrEmpty(TempData["Error"] as string))
                            {
                                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </section>


    </div>
</div>
<!-- main content -->



                   