@using NetFlix.CORE.ViewModels
@model List<GetMovieVm>

<section class="search-results" style="padding: 40px;">
    <h2 style="color:white;">Axtarış Nəticələri</h2>

    @if (!Model.Any())
    {
        <p style="color:white;">Heç bir nəticə tapılmadı.</p>
    }
    else
    {
        <div class="movie-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 30px;">
            @foreach (var item in Model)
            {
                <div class="movie-card" style="background-color: #1c1c1c; padding: 15px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.5); color:white;">
                    <div class="movie-poster" style="text-align:center;">
                        <img src="@item.PosterFileName" alt="@item.Title" style="max-width: 100%; max-height: 300px; border-radius: 10px;" />
                    </div>
                    <div class="movie-info" style="margin-top: 10px;">
                        <h3>
                            <a asp-controller="Movie" asp-action="Detail" asp-route-id="@item.Id" style="color:white;">
                                @item.Title
                            </a>
                        </h3>
                        <p><strong>Category:</strong> @item.Category</p>
                        <p><strong>IMDb:</strong> @item.ImdbRating</p>
                        <p><strong>Release Year:</strong> @item.Year</p>
                    </div>
                </div>
            }
        </div>
    }
</section>